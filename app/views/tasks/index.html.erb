<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <p><%= link_to task.title, task_path(task) %></p>
  <%= button_to task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" }, class: 'delete-task' do %>
    <i class="fa-regular fa-trash-can"></i> Delete
  <% end %>
<% end %>

<p><%= link_to 'Add New Task', new_task_path %></p>
